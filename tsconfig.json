{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "#global-store": ["src/global-store/store.ts"],
      "#presenters/*": ["src/presenters/*"],
      "#repositories": ["src/repositories/index.ts"],
      "#assets/*": ["src/assets/*"],
      "#components/base-ui": ["src/components/base-ui/index.ts"],
      "#components/common": ["src/components/global/index.ts"],
      "#lib/*": ["src/lib/*"]
    },
    "types": ["vite/client", "@emotion/react/types/css-prop", "node"],
    "jsxImportSource": "@emotion/react"
  },
  "exclude": ["node_modules", "@strapi/design-system"],
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
